<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_view_button_recommend"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_weight="1"
            android:background="@mipmap/button_1_2" />

        <TextView
            android:id="@+id/menu_view_button_list"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_weight="1"
            android:background="@mipmap/button_2_1" />

        <TextView
            android:id="@+id/menu_view_button_singer"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_weight="1"
            android:background="@mipmap/button_3_1" />

        <TextView
            android:id="@+id/menu_view_button_song"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_weight="1"
            android:background="@mipmap/button_4_1" />

        <TextView
            android:id="@+id/menu_view_button_class"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_weight="1"
            android:background="@mipmap/button_5_1" />

    </LinearLayout>


</RelativeLayout>